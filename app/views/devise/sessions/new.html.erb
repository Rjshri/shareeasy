
<%= stylesheet_link_tag 'login' %>

<div class="container-fluid" style="text-align:center; background-color:black; color:white;">
  <h1>ShareEasy</h1>
</div>

<div class="signup">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class='text-center'>Login</h2>
  <div class="mb-3">
      <%= f.label :email, for:"email", class:"form-label"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"email" %>
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <%= f.label :password, for:"pass", class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"pass" %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>
<div class="d-grid gap-2">
  <%= f.submit "Log in" ,class:"btn btn-primary" %>
</div>
<div>
  <span><b>Don't Have an Account?</b></span>
  <%= link_to "Sign up", new_registration_path(resource_name) %>
</div>

</div>
<% end %>
